                    "regex": {

                    }
                  }
                },
                {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "range": {
                      "type": "object",
                      "properties": {
                        "min": {
                          "type": "integer"
                        },
                        "max": {
                          "type": "integer"
                        }
                      }
                    }
                  }
                }
              ]
            }
          }
        }
      }
    }
  },
  "additionalProperties": false,
  "properties": {
    "version":{
      "type": "string",
      "enum": [
        "0.0.1"
      ]
    }
  },
